<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Posts</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>

  <body>
    <div class="container">
      <h1 class="companyName">Inseed</h1>
      <h2 class="slogan">We connect people to help them find a job.</h2>
      <a id="newPostBtn" href="/new">New Post</a>
      <ul id="postsList">
        <% posts.forEach(post=> { %>
        <li>
          <h2><%=post.title%></h2>
          <small> <%=post.date %> </small>
          <p><%=post.content%></p>
          <small>By: <%=post.author%> </small>
          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
